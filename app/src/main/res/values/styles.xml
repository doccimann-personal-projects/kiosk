<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Chip에 대한 스타일 -->
    <style name="Widget.Kiosk.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/brown</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/bg_filter_chip_state_list</item>
        <item name="android:textColor">@color/text_filter_chip_state_list</item>
        <item name="textStartPadding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipIconTint">@color/icon_filter_chip_state_list_reset</item>
        <item name="chipIconSize">12dp</item>
        <item name="iconStartPadding">6dp</item>
        <item name="chipEndPadding">2dp</item>
    </style>

    <!-- Cart Button에 대한 스타일  -->
    <style name="CartButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/cart_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>